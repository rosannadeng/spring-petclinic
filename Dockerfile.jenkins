FROM jenkins/jenkins:jdk17

USER root

# Install Docker CLI and Ansible
RUN apt-get update && \
    apt-get install -y docker.io ansible sshpass && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

USER jenkins

# Pre-install plugins (including htmlpublisher)
RUN jenkins-plugin-cli --plugins \
    git \
    workflow-aggregator \
    sonar \
    jacoco \
    pipeline-github-lib \
    docker-workflow \
    timestamper \
    warnings-ng \
    htmlpublisher \
    configuration-as-code \
    blueocean \
    prometheus